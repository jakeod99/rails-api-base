#!/usr/bin/env ruby

require_relative 'bin_ex'

rebuild_success = false

DOWN = "docker-compose down"
down_success = BinEx.new(DOWN).run

if down_success
  RM = "docker-compose rm"
  rm_success = BinEx.new(RM).run

  if rm_success
    BUILD = "docker-compose build --no-cache"
    rebuild_success = BinEx.new(BUILD).run
  end
end

if rebuild_success
  puts "[SUCCESS]".green + " hard_rebuild".cyan + " has successfully rebuilt".yellow
  puts "\nAttempting to run db:prepare, then spin up containers for the fresh images".yellow
  PREPARE_DB = "docker-compose run api bundle exec rails db:prepare"
  BinEx.new(PREPARE_DB).run
  UP = "docker-compose up"
  BinEx.new(UP).run
else
  puts "[FAILED]".red + " hard_rebuild".cyan + " failed during last step".yellow
end
